<div class="row">
  <div class="span12">
    <%= render partial: 'votes/voter', locals: { topic: @topic, post: @post } %>
    <h2><%= markdown @post.title %></h2>  
    <div>
      <small>
        <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
        submitted <%= time_ago_in_words(@post.created_at) %> ago by
        <%= @post.user.name %>, 
        <% if can? :edit, @post %>
          <%= link_to "Edit", edit_topic_post_path(@topic, @post) %>
        <% end %>
        <% if can? :destroy, @post %>
          | <%= link_to "Delete", [@topic, @post], method: :delete, confirm: 'Are you sure you want to delete this post?' %>
        <% end %>
        <strong><%= pluralize(@post.points, 'point') %></strong>
        (<%= pluralize(@post.up_votes, 'up vote') %> | 
        <%= pluralize(@post.down_votes, 'down vote') %>)
      </small>
    </div>
    <p><%= markdown @post.body %></p>
    <p><%= image_tag(@post.image_url) if @post.image? %></p>
    <hr/>
    
    <h3><%= @comments.count %> Comments</h3>
    
    <% if can? :create, Comment %>
      <hr/>
      <h4>New Comment</h4>
      <%= render partial: 'comments/form', locals: { topic: @topic, post: @post, comment: @comment } %>
    <% end %>
    
    <%= render @comments %>
  </div>
</div>
<h1>Topics</h1>

<div class="row">
  <div class="span10">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <p><%= link_to topic.name, topic %></p>
          </h4>
          <small>
            <%= topic.description %>
          </small>
        </div>
      </div>
    <% end %>
    <%= will_paginate @topics %>
  </div>
  <div class="span2">
    <% if can? :create, Topic %>
      <%= link_to "New Topic", new_topic_path, class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>